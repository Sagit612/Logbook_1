<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <TextView
                android:id="@+id/calculationDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="viewEnd"
                android:textColor="@color/white"
                android:textSize="50dp"
                android:text="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:id="@+id/resultDisplay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|end"
                android:textColor="@color/white"
                android:textSize="80dp"
                android:text="0"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/grey"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="dp" />

            <Button
                android:id="@+id/btnChangeSign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/grey"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btnPercentage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/grey"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/orange"
                android:text="/"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="7"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="8"
                android:textSize="30dp"
                android:backgroundTint="@color/darkOrange"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:text="9"
                android:textSize="30dp"
                android:backgroundTint="@color/darkOrange"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/orange"
                android:text="*"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="4"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="5"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="6"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/orange"
                android:text="-"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="1"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="2"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text="3"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:backgroundTint="@color/orange"
                android:text="+"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4" >

            <Button
                android:id="@+id/btn0"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3"
                android:backgroundTint="@color/darkOrange"
                android:text="0"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="316dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btnComma"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:backgroundTint="@color/darkOrange"
                android:text=","
                android:textSize="30dp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="680dp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:backgroundTint="@color/orange"
                android:text="="
                android:textSize="30dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="680dp" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>